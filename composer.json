{
    "name": "scrutinizer/scrutinizer",
    "description": "A library for gathering code analysis results",
    "license": "Apache2",

    "repositories": [
        {"type": "git", "url": "git://github.com/scrutinizer-ci/pdepend"},
        {"type": "git", "url": "git://github.com/scrutinizer-ci/phpmd"},
        {"type": "git", "url": "git://github.com/scrutinizer-ci/phpcpd"},
        {"type": "git", "url": "git://github.com/scrutinizer-ci/finder-facade"}
    ],

    "bin": ["bin/scrutinizer"],

    "require": {
        "php": ">=5.4",
        "scrutinizer/utils": "dev-master",
        "symfony/config": "~2.0",
        "symfony/console": "~2.0",
        "symfony/process": "~2.1@dev",
        "symfony/finder": "~2.1",
        "symfony/yaml": "~2.0",
        "symfony/filesystem": "~2.0",
        "symfony/event-dispatcher": "~2.0",
        "monolog/monolog": "~1.2.0",
        "psr/log": "1.0.0",
        "phpoption/phpoption": "~1.0@dev",
        "jms/serializer": "dev-master",
        "jms/php-manipulator": "dev-master",
        "phpcollection/phpcollection": "~0.2@dev",
        "guzzle/guzzle": "~3.0",
        "nikic/php-parser": "dev-master"
    },

    "require-dev": {
        "phpmd/phpmd": "dev-master",
        "pdepend/pdepend": "dev-master",
        "squizlabs/php_codesniffer": "dev-master",
        "fabpot/php-cs-fixer": "dev-master",
        "sebastian/phpcpd": "dev-master",
        "phploc/phploc": "dev-master",
        "phpunit/phpunit": "~4.0.0"
    },

    "autoload": {
        "psr-0": {
            "Scrutinizer": "src/" 
        }
    }
}
